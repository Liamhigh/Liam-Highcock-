# Verum Omnis Environment Configuration
# 
# IMPORTANT: This is an example file. Copy this to .env and fill in your values.
# NEVER commit .env files with real credentials to version control!

# ============================================================================
# Firebase Configuration
# ============================================================================
# Get these from Firebase Console > Project Settings > General
# FIREBASE_API_KEY=your_firebase_api_key_here
# FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_STORAGE_BUCKET=your-project.appspot.com
# FIREBASE_MESSAGING_SENDER_ID=123456789012
# FIREBASE_APP_ID=1:123456789012:web:abcdef123456

# ============================================================================
# API Configuration
# ============================================================================
# Backend API URL (if applicable)
# VITE_API_URL=https://api.verumglobal.foundation
# REACT_APP_API_URL=https://api.verumglobal.foundation

# ============================================================================
# Feature Flags
# ============================================================================
# Enable/disable features based on environment
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_ERROR_TRACKING=true
# VITE_ENABLE_DEBUG_MODE=false

# ============================================================================
# Analytics & Monitoring
# ============================================================================
# Google Analytics
# VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X
# VITE_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry (Error Tracking) - Get DSN from https://sentry.io
# VITE_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
# VITE_SENTRY_ENVIRONMENT=production

# Firebase Performance Monitoring
# VITE_ENABLE_PERFORMANCE_MONITORING=true

# ============================================================================
# Third-Party Services
# ============================================================================
# Add any third-party API keys here
# VITE_STRIPE_PUBLIC_KEY=pk_live_xxxxx
# VITE_RECAPTCHA_SITE_KEY=xxxxx

# ============================================================================
# Environment
# ============================================================================
NODE_ENV=production

# ============================================================================
# Build Configuration
# ============================================================================
# VITE_APP_VERSION=1.0.0
# VITE_BUILD_TIME=2025-11-26T00:00:00Z
