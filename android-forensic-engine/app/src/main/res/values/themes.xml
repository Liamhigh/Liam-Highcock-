<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Verum Omnis Official Dark Theme -->
    <style name="Theme.VerumOmnisForensic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Status Bar (Dark) -->
        <item name="android:statusBarColor">@color/primary_variant</item>
        <item name="android:navigationBarColor">@color/primary_variant</item>
        
        <!-- Window -->
        <item name="android:windowBackground">@color/background</item>
    </style>
    
    <!-- Card Style -->
    <style name="VerumCard">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>
    
    <!-- Button Styles -->
    <style name="VerumButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/on_secondary</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="VerumButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/secondary</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="VerumTitle">
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="VerumSubtitle">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="VerumBody">
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
