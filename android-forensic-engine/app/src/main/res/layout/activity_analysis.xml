<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.AnalysisActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/forensic_analysis"
        app:titleTextColor="@color/text_primary"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
        app:navigationIconTint="@color/text_primary" />

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                style="@style/Widget.VerumOmnis.Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/analysis_in_progress"
                        android:textAppearance="@style/TextAppearance.VerumOmnis.Headline2" />

                    <TextView
                        android:id="@+id/currentBrainText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.VerumOmnis.Subtitle"
                        tools:text="Analyzing with Contradiction Brain..." />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/overallProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        style="@style/Widget.VerumOmnis.ProgressIndicator"
                        app:trackThickness="8dp" />

                    <TextView
                        android:id="@+id/progressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textAppearance="@style/TextAppearance.VerumOmnis.Caption"
                        tools:text="Brain 3 of 9" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Brain Progress List -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Brain Analysis Progress"
                android:textAppearance="@style/TextAppearance.VerumOmnis.Headline2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/brainProgressRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_brain_progress"
                tools:itemCount="9" />

            <!-- View Report Button (shown when complete) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/viewReportButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/view_report"
                android:visibility="gone"
                style="@style/Widget.VerumOmnis.Button.Primary"
                app:icon="@android:drawable/ic_menu_view"
                app:iconGravity="textStart" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
